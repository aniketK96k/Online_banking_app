<%- include('partials/header') %>

  <div class="container">
    <div class="jumbotron centered">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">enter the Id of the person to whom you want to send</h1>

      <form action="/sendmoney" method="POST">

        <div class="form-group">
          <input type="text" class="form-control text-center" name="id" placeholder="id of receiver">
